<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Day"
        android:id="@+id/Day"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/Event1"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentStart="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_alignParentLeft="true"
            android:layout_margin="2dp"
            android:background="#abe6e4" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/Event2"
            android:layout_gravity="right"
            android:layout_alignParentEnd="false"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginLeft="5dp"
            android:layout_alignParentLeft="false"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:layout_toRightOf="@+id/Event1"
            android:background="#abe6e4" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/Event3"
            android:layout_alignParentStart="false"
            android:layout_below="@+id/Event1"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_alignParentLeft="true"
            android:layout_margin="2dp"
            android:background="#abe6e4" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/Event4"
            android:layout_toRightOf="@+id/Event3"
            android:layout_below="@+id/Event2"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:background="#abe6e4" />
    </RelativeLayout>

</LinearLayout>